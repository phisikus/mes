<model name="purchase" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://schema.qcadoo.org/model"
       xsi:schemaLocation="http://schema.qcadoo.org/model http://schema.qcadoo.org/model.xsd">
    <fields>
        <belongsTo name="product" required="true" model="product" plugin="basic"/>

        <decimal name="quantity" required="true" default="0">
            <validatesRange from="0" message="basic.purchase.quantity.error.shouldBeGreaterThanZero"/>
        </decimal>

        <decimal name="price" required="true" default="0">
            <validatesRange from="0" message="basic.purchase.price.error.shouldBeGreaterThanZero"/>
        </decimal>

        <datetime name="date" required="true"/>

    </fields>
    <hooks>
        <validatesWith class="com.qcadoo.mes.basic.hooks.PurchaseHooks"
                       method="checkIfNotDuplicateProductAndPrice"/>
    </hooks>


    <identifier expression="#date + ' - ' + #product['name'] + ' - ' + #quantity"/>
</model>